<Window x:Class="McsRemotePad.MainPad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MCS Remote Utility" Height="600" Width="900" WindowStartupLocation="CenterScreen">
    <Grid>
        <Menu HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="253">
            <Menu.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF9FC6FF" Offset="1"/>
                    <GradientStop Color="White"/>
                </LinearGradientBrush>
            </Menu.Background>
            <MenuItem Header="File" >
                <MenuItem x:Name="muLogout" Header="LogOut" HorizontalAlignment="Left" Width="149" Click="muLogout_Click"/>
                <MenuItem x:Name="muClose" Header="Close" HorizontalAlignment="Left" Width="149" Click="muClose_Click"/>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
